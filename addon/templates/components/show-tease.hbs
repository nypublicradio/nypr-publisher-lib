<div class="flag flush {{if featuredSpot 'flag--luxe' 'flag--med'}}">

  {{#if show.image.crop}}
    <a href={{showUrl}} class="flag-image link--nodecor" title={{show.title}}>
    {{#if featuredSpot}}
      <img src={{image-template show.image.template 150 150 show.image.crop}} class="squarebadge--lg" >
    {{else}}
      <img src={{image-template show.image.template 90 90 show.image.crop}} class="squarebadge">
    {{/if}}
    </a>
  {{/if}}

  <div class="flag-body">
    <div class="text">
      {{#if featuredSpot}}

        {{#unless simpleLayout}}
          <h4 class="text--small text--lightgray text--lato text--heavy text--upper nudge-mini medium-up">
            {{producing-orgs show.producingOrganizations unlinked=true}}
          </h4>
        {{/unless}}

        <h2 class="h1 h2--mq-small nudge text--white">
          <a href={{show.url}} class="link--white" title={{show.title}}>{{show.title}}</a>
        </h2>

        {{#unless simpleLayout}}
          <div class="text--default text--white medium-up">
            {{{show.tease}}}
          </div>
        {{/unless}}

      {{else}}

        {{#unless simpleLayout}}
        <h4 class="text--small text--lightgray text--spacing text--upper nudge medium-up">{{producing-orgs show.producingOrganizations unlinked=true}}</h4>
        {{/unless}}

        <h2 class="h2 h2--mq-small nudge-mini text-body--forceblock">
          <a href="{{show.url}}" title="{{show.title}}" class="link--dark">{{show.title}}</a>
        </h2>

        {{#unless simpleLayout}}
        <div class="text-body--nopad medium-up">{{{show.tease}}}</div>
        {{/unless}}

      {{/if}}
    </div>
  </div>
</div>
