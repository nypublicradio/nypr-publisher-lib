{{#each streams as |stream|}}
{{#if stream.liveOnAny}}

{{#holygrail-layout tagName='li' class='streamitem' as |g|}}
  {{#g.left}}
    <div class="streamitem-imagewrap">
      <img class="streamitem-image" src={{stream.imageLogo}}>
    </div>
  {{/g.left}}

  {{#g.center class='streamitem-info'}}
    <h2 class="streamitem-header">
      <a class="streamitem-link" href="{{stream.scheduleUrl}}">{{stream.name}}</a>
    </h2>
    <div class="streamitem-body">
      <a class="streamitem-link" href="{{stream.currentShow.showUrl}}">
        {{stream.currentShow.showTitle}}
      </a>
      {{!-- Has a current story/episode --}}
      {{#if stream.currentShow.episodeTitle}}
        -
        <a class="streamitem-link" href="{{stream.currentShow.episodeUrl}}">
          {{stream.currentShow.episodeTitle}}
        </a>
      {{/if}}
      {{!-- Music stream with a playing song--}}
      {{#if stream.hasPlaylists}}
      {{#if stream.currentPlaylistItem}}
        -
        <span class="streamitem-metadata">
          {{song-metadata stream.currentPlaylistItem.catalogEntry}}
        </span>
      {{/if}}
      {{/if}}
    </div>
  {{/g.center}}

  {{#g.right}}
  {{#if media.isMediumAndUp}}
      {{#listen-button
        class='gtm__click-tracking'
        data-action='Clicked Play/Pause Stream: stream-list'
        data-label=stream.name
        type='gray-minion'
        itemPK=stream.slug
        itemTitle=stream.name}}
        Listen Live
      {{/listen-button}}
    {{else}}
      {{listen-button
        class='gtm__click-tracking'
        data-action='Clicked Play/Pause Stream: stream-list'
        data-label=stream.name
        type='blue-hollow'
        itemPK=stream.slug
        itemTitle=stream.name}}
    {{/if}}
  {{/g.right}}
{{/holygrail-layout}}

{{/if}}
{{/each}}
